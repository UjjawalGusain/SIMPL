number x = 10.0;
number y = 5;
string msg = "Hello, World!";

func add(number a, number b) {
    number result = a + b;
    return result;
}

func factorial(number n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

